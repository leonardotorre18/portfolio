---
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import SkillCard from "../components/SkillCard.astro";
import Layout from "../layouts/Layout.astro";
import FrontendImage from "../assets/computer-dynamic-premium.png";
import SecurityImage from "../assets/sheild-dynamic-premium.png";
import DesignerImage from "../assets/paint-kit-dynamic-premium.png";
import BackendImage from "../assets/lab-dynamic-premium.png";
import ResponsiveImage from "../assets/bulb-dynamic-premium.png";
import ProjectCard from "../components/ProjectCard.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

const skills = [
	{
		title: "Programación Frontend",
		description:
			"Experto en transformar diseños a páginas web llenas de vida, atractivas e interactivas. Creación de código limpio y optimizado",
		image: FrontendImage.src,
	},
	{
		title: "Diseñador UX/UI",
		description:
			"Creación de interfaces web profesionales orientadas a la experiencia de usuarios",
		image: DesignerImage.src,
	},
	{
		title: "Programación Backend",
		description:
			"Desarrollo de aplicaciones web del lado del servidor que solucionen las necesidades del usuario",
		image: SecurityImage.src,
	},
	{
		title: "Diseño Web Responsivo",
		description:
			"Páginas optimizadas para adaptarse a todo tipo de pantallas (Móviles, Tabletas, Escritorio)",
		image: ResponsiveImage.src,
	},
	{
		title: "SEO, Velocidad y Eficiencia",
		description:
			"¡Que tu página sea el primer resultado! Buenas prácticas orienadas a mejorar la respuesta de los motores de busqueta",
		image: BackendImage.src,
	},
];

const projects = [
	{
		title: "Api: Instituto Alfa",
		description: "Instituto Alfa Carabobo C.A me dio la oportunidad de crear una API que se ajustara a las necesidades de sus estudiantes para proyectos de programación Frontend. El proyecto fue creado empleando TypeScript con lenguaje de programación para definir la lógica de negocio. Express es el framework que atiende las peticiones web. Desplegado de forma automatizada en una máquina virtual de Azure a través de Gitlab CI. Para la documentación de la API elegí AstroJS para la interfaz de usuario. Dado que se enfoca para estudiantes que dan sus primeros pasos en el mundo del desarrollo web, la interfaz debía ser moderna, sencilla e intuitiva para favorecer su rápido aprendizaje",
		url: {
			demo: "https://api.institutoalfa.org/",
		}
	},{
		title: "Api: Instituto Alfa",
		description: "Instituto Alfa Carabobo C.A me dio la oportunidad de crear una API que se ajustara a las necesidades de sus estudiantes para proyectos de programación Frontend. El proyecto fue creado empleando TypeScript con lenguaje de programación para definir la lógica de negocio. Express es el framework que atiende las peticiones web. Desplegado de forma automatizada en una máquina virtual de Azure a través de Gitlab CI. Para la documentación de la API elegí AstroJS para la interfaz de usuario. Dado que se enfoca para estudiantes que dan sus primeros pasos en el mundo del desarrollo web, la interfaz debía ser moderna, sencilla e intuitiva para favorecer su rápido aprendizaje",
		url: {
			demo: "https://api.institutoalfa.org/",
		}
	},{
		title: "Api: Instituto Alfa",
		description: "Instituto Alfa Carabobo C.A me dio la oportunidad de crear una API que se ajustara a las necesidades de sus estudiantes para proyectos de programación Frontend. El proyecto fue creado empleando TypeScript con lenguaje de programación para definir la lógica de negocio. Express es el framework que atiende las peticiones web. Desplegado de forma automatizada en una máquina virtual de Azure a través de Gitlab CI. Para la documentación de la API elegí AstroJS para la interfaz de usuario. Dado que se enfoca para estudiantes que dan sus primeros pasos en el mundo del desarrollo web, la interfaz debía ser moderna, sencilla e intuitiva para favorecer su rápido aprendizaje",
		url: {
			demo: "https://api.institutoalfa.org/",
		}
	},
];
---

<Layout>
	<HeroSection />

	<section class="skills" id="skills">
		<h2 class="skills__title">Habilidades</h2>
		<div class="skills__container">
			{
				skills.map((skill, index) => (
					<SkillCard
						key={index}
						title={skill.title}
						description={skill.description}
						image={skill.image}
					/>
				))
			}
		</div>
	</section>

	<section class="projects" id="projects">
		<h2 class="projects__title">Proyectos</h2>
		<div class="projects__container">
			{
				projects.map((project) => (
					<ProjectCard
						title={project.title}
						url={project.url}
						description={project.description}
					/>
				))
			}
		</div>
	</section>

	<Footer />
</Layout>

<style>
	section.skills {
		background-color: #1e1e1e;
		color: #f2f2f2;
	}
	@media (max-width: 768px) {
		section.skills {
			padding-top: 36px;
		}
	}
	.skills__title, .projects__title {
		text-align: center;
		font-size: 36px;
		font-weight: bold;
		font-family: 'Montserrat Bold';
	}
	.skills__container {
		padding: 100px 60px;
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 20px;
	}
	section.projects {
		padding: 60px 0 30px 0;
		height: 100vh;
		display: flex;
		flex-direction: column;
		/* overflow: hidden; */
	}
	.projects__container {
		flex-grow: 1;
		display: grid;
		grid-auto-flow: column;
		grid-auto-columns: 100%;
		/* overflow-x: scroll; */
	}
</style>
<script>

	import gsap from "gsap"

	const project_container = document.querySelector('#projects')
	const project_card = gsap.utils.toArray<HTMLElement>('.project-card')

	gsap.to(project_card, {
		xPercent: -100 * (project_card.length - 1),
		scrollTrigger: {
			trigger: project_container,
			pin: true,
			scrub: 3,
			// markers: true,
			start: 'center+=20 center',
			end: 'bottom+=20 top',
		}
	})
</script>
