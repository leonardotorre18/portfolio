<style>
    .hero-section {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        padding: 30px 60px;
    }

    .hero-section__texture {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -10;
        opacity: 0.2;
    }
    .back3d {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -5;
    }
    .front3d {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .hero-section__container {
        display: flex;
        height: 100%;
        margin: 0 auto;
        max-width: 1200px;
        align-items: flex-end;
        padding-bottom: 5%;
    }
    .hero-section__container__content {
        display: flex;
        flex-grow: 1;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        gap: 4px;
        height: 100%;
    }
    .hero-section__container__content__name {
        font-size: 24px;
        font-family: "Montserrat Bold";
    }
    .hero-section__container__content__title {
        font-size: 56px;
        font-weight: 700;
        display: flex;
        flex-direction: column;
        line-height: 100%;
        margin-bottom: 2.35rem;
        font-family: "Montserrat Subrayada", sans-serif;
        /* min-width: max-content; */
    }
    .hero-section__container__content__title span {
        font-size: 94px;
        font-weight: 700;
    }
    .hero-section__container__content__footer {
        display: flex;
        gap: 12px;
    }
    .hero-section__container__content__footer__line {
        width: 2px;
        background-color: #0d0d0d;
        margin: 10px 0;
    }
    .hero-section__container img {
        width: 100%;
        /* height: 100%; */
        flex-grow: 1;
        min-width: 450px;
        object-fit: contain;
    }
    .wave {
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 100%;
        overflow: hidden;
        z-index: 10;
        height: 30%;
    }
    .wave img {
        height: 100%;
        width: 100%;
    }
</style>
