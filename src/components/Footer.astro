---
import { Icon } from 'astro-icon/components'
---

<footer class="footer" id="footer">
    <div class="footer__heading">
        <div class="footer__heading__image">
            <!-- <img
              src={image}
              alt='Leonardo Torrealba'
            /> -->
        </div>
        <div class="footer__heading__icons">
            <a href={import.meta.env.INSTAGRAM_URL} target='_blank'>
              <!-- <RiInstagramFill /> -->
              <Icon name="fa:instagram" />
            </a>
            <a href={import.meta.env.LINKEDIN_URL} target='_blank'>
              <!-- <RiLinkedinFill /> -->
               <Icon name="fa:linkedin" />
            </a>
            <a href={import.meta.env.WHATSAPP_URL} target='_blank'>
              <!-- <RiWhatsappFill /> -->
               <Icon name="fa:whatsapp" />
            </a>
        </div>
    </div>
    <div class="footer__params">
        <p>Copyright Â© 2022 Leonardo Torrealba. All rights reserved</p>
        <p>Designed by LeonardoTorre</p>
    </div>
</footer>

<style>
    .footer {
        padding: 70px 60px;
        display: flex;
        flex-direction: column;
        gap: 64px;
    }

    .footer__heading {
        display: flex;
        flex-direction: column;
        gap: 32px;
        align-items: center;
    }

    .footer__heading__image {
        width: 150px;
        height: 150px;
        background-color: #f2f2f2;
        border-radius: 20px;
        overflow: hidden;
    }

    .footer__heading__image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .footer__heading__icons {
        display: flex;
        gap: 16px;
    }
    .footer__heading__icons > a > svg {
        width: 32px;
        height: 32px;
        color: #1e1e1e;
    }

    .footer__params {
        justify-content: space-between;
        display: flex;
        gap: 8px;
    }
    @media (max-width: 768px) {
        .footer__params {
            flex-direction: column;
        }
    }
    .footer__params p:last-child {
        text-align: right;
    }
    @media (max-width: 768px) {
        .footer__params > p {
            text-align: center !important;
        }
    }
</style>
